.MODEL SMALL 
.STACK 100H
.DATA

M1 DB "THE SUM OF $"
M2 DB " AND $"
M3 DB " IS $"

.CODE
MAIN PROC
MOV AX,@DATA
MOV DS,AX

MOV AH,2
MOV DL,'?'
INT 21H

MOV AH,1
INT 21H
MOV BL,AL
MOV BH,AL

MOV AH,1
INT 21H
MOV CL,AL

ADD BL,CL
SUB BL,48

MOV AH,2
MOV DL,0DH
INT 21H
MOV AH,2
MOV DL,0AH
INT 21H


LEA DX,M1
MOV AH,9
INT 21H

MOV AH,2
MOV DL,BH
INT 21H

LEA DX,M2
MOV AH,9
INT 21H

MOV AH,2
MOV DL,CL
INT 21H

LEA DX,M3
MOV AH,9
INT 21H

MOV AH,2
MOV DL,BL
INT 21H

MAIN ENDP
